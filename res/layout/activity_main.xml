<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Public IP" />

            <EditText
                android:id="@+id/txtPublic"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="127.0.0.1" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Peer IP" />

            <EditText
                android:id="@+id/txtPeerIP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="37.188.228.183" />

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textVMessage"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Peer port" />

            <EditText
                android:id="@+id/txtPeerPort"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="80" >

            </EditText>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N:" />

            <EditText
                android:id="@+id/txtN"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="number"
                android:text="10" >

                <requestFocus />
            </EditText>
            
        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >

             <Button
                 android:id="@+id/btnGetPublicIP"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:text="gPub"
                 android:textSize="12sp" />

             <Button
                 android:id="@+id/btnNATDetect"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:text="NAT"
                 android:textSize="12sp" />

             <Button
                 android:id="@+id/btnAlg"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:text="alg"
                 android:textSize="12sp" />

             <Button
                 android:id="@+id/btnClear"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:text="clr"
                 android:textSize="12sp" />

             <CheckBox
                 android:id="@+id/checkMaster"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:checked="true"
                 android:textSize="12sp"
                 android:text="M" />

         </LinearLayout>

         <EditText
             android:id="@+id/txtLog"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:ems="10"
             android:fontFamily="monospace"
             android:gravity="top"
             android:inputType="textMultiLine|none"
             android:linksClickable="false"
             android:scrollHorizontally="false"
             android:text="Welcome, do something...\n"
             android:textSize="10sp" />
        
    </LinearLayout>

</RelativeLayout>